<h1>Add new Statistic</h1>
<%= form_for @statistic do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control", :placeholder => "Unique name of the Statistic" %>
  </div>

  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, :class => "form-control", :placeholder => "Url to analyze" %>
  </div>

  <%= f.submit :class => "btn btn-default" %>
<% end %>
